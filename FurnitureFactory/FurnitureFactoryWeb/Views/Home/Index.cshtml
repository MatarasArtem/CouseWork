@model FurnitureFactoryWeb.ViewModels.HomeViewModel
@{ ViewData["Title"] = "Мебельная фабрика"; }
<table border="0">
    <tr>

        <td>
            <table border=1>
                <caption>Клиенты</caption>

                <tr>
                    <th>Код клиента</th>
                    <th>Номер телефона</th>
                    <th>Адрес</th>
                    <th></th>

                </tr>
                @foreach (var customer in Model.Customers)
                {
                    <tr>
                        <td>@customer.Id</td>
                        <td>@customer.Phone</td>
                        <td>@customer.Address</td>
                        <td><a href="~/Customers/Edit/@customer.Id">Редактировать</a></td>
                    </tr> 
                 }
            </table>
        </td>
</table>


